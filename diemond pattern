n = 5
for i in range(0,n):
    for j in range(0,n-i-1):
        print(" ",end = " ")
    for k in range(i+1):
        print("*",end = " ")
    for l in range(i):
        print("*",end = " ")
    print()    


n  = 5
for i in range(5,0,-1):
    for j in range(n-i):
        print(" ",end = " ")
    for k in range (i):
        print("*",end =  " ")
    for l in range(i-1):
        print("*",end = " ")
    print()
